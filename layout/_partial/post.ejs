<article id="cover" class="post white-box <%- theme.style.body.effect.join(' ') %> reveal <%= (post.title) ? "" : "no-title" %>">
  <% if (post.photoo) { %>
  <div class="post_cover">
    <a href="<%= url_for(post.link || post.path) %>" title="<%= post.title %>">
      <img class="post_bg loaded" onerror="this.onerror=null;this.src='https:\/\/jerryc.me\/img\/404.jpg'"
        alt="<%= post.title %>" data-ll-status="loaded" src="<%= post.photourl %>">
    </a>
  </div>
  <% } %>
  <div class="post_info">
    <%- partial('meta',{post:post, position:'header'}) %>
    <section class="article typo">
      <div class="article-entry" itemprop="articleBody">
        <% if (post.excerpt) { %>
        <%- post.excerpt %>
        <% } else if (post.description) { %>
        <p><%- post.description %></p>
        <% } else { %>
        <%- post.content %>
        <% } %>
      </div>
        <% if (theme.layout.on_list.readmore) { %>
        <% if ((post.readmore != false) && (post.excerpt || post.description || post.link)) { %>
        <a class="readmore" href="<%- url_for(post.link || post.path) %>">
          <%- theme.layout.on_list.readmore %>
        </a>
        <% } %>
        <% } %>
    </section>
  </div>
</article>
