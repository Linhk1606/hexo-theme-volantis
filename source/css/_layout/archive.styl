#archive-page
  margin-bottom: $gap * 2
  .archive

    .archive-year
      margin-top: 4em
      margin-bottom: 1em
      &:first-child
        margin-top: 0em
        padding-top: 0

      h2
        margin-top: 1em


    .archive-post
      a
        color: var(--color-p)
        width: 100%
        display: inline-flex
        flex-flow: row nowrap
        justify-content: flex-start
        align-items: flex-start
        background: transparent
        border-left: $border-line solid transparent
        border-radius: $border-line
        vertical-align: middle
        font-size: $fontsize-meta
        &.child
          padding-left: 2 * $gap

        trans()
        &:hover
          background: bgcolor($color-theme)
          border-left: $border-line solid $color-theme
          // padding-top: 8px
          // padding-bottom: 8px
        &:active
          border-left: $border-line * 2 solid $color-theme

      time
        flex: none
        vertical-align: middle
        padding: .4em
        padding-left: 2em
        color: var(--color-meta)
        @media screen and (max-width: $device-mobile)
          padding-left: 1em

      .title
        flex: auto
        padding: .4em
        i
          color: var(--color-hover)
          &.red
            color: $color-mac-red
          &.green
            color: $color-mac-green
          &.yellow
            color: $color-mac-yellow
          &.blue
            color: $color-mac-cyan
          &.theme
            color: $color-theme
          &.accent
            color: var(--color-hover)
          &.orange
            color: $color-md-deep-orange
    .all-categories
      time
        color: var(--color-p)
      .title
        color: var(--color-meta)

    .all-tags
      display: flex
      flex-wrap: wrap
      align-items: flex-start
      justify-content: flex-start
      align-items: baseline
      word-spacing: $gap * 0.5
      text-align: center
      ul
        margin: 0 -4px
        padding: 0
        display: flex
        flex-wrap: wrap
        li
          list-style: none
          background: var(--color-block)
          margin: $gap-row 4px
          border-radius: $border-button
          overflow: hidden
          display: flex
          a
            display: inline-block
            color: var(--color-p)
            padding: 4px 8px 4px 12px
            &:hover
              color: var(--color-hover) !important
          span
            padding: 4px 8px
            color: alpha($color-meta, .5)
            background: darken($color-block, 5)
            pointer-events: none
          &:hover
            background: bgcolor($color-hover)
            a
              color: var(--color-hover)
            span
              background: bgcolor($color-hover)
